---
import BriefcaseIcon from "../icons/BriefcaseIcon.astro";
import { EXPERIENCIAS } from "../js/experiencias";
---

<section>
  <h2 class="flex items-center gap-3 font-bold text-2xl sm:text-3xl mb-5 text-white/70 headline">
    <BriefcaseIcon class="size-7" /> Experiencia laboral</h2>
  <section class="flex flex-col gap-12 w-full sm:max-w-[810px] text-white/70">
    <ol class="relative border-s border-gray-400 ml-3">
      {
        EXPERIENCIAS.map(({ date, title, company, description }) => (
          <li class="mb-10 ms-7 headline">
            <div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 bg-gray-400" />
            <time class="mb-1 text-sm font-normal leading-none text-white/70">{date}</time>
            <h3 class="text-lg font-semibold text-white/70">{title}</h3>
            <h4 class="font-semibold mt-1 text-white/70">{company}</h4>
            <p class="text-base font-normal text-gray-400 text-pretty">{description}</p>
          </li>
        ))
      }
    </ol>
  </section>
</section>

<script>
  import ScrollReveal from "scrollreveal";
  ScrollReveal().reveal(".headline", { delay: 100 });
</script>

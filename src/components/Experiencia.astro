---
import BriefcaseIcon from "../icons/BriefcaseIcon.astro";
import { EXPERIENCIAS } from "../js/experiencias";
---

<section>
  <h2 class="flex items-center gap-3 font-bold text-2xl sm:text-3xl mb-5 text-white/70 headline">
    <BriefcaseIcon class="size-7" /> Experiencia laboral
  </h2>
  <section class="flex flex-col gap-12">
    {
      EXPERIENCIAS.map(({ title, company, date, description }) => (
        <article class="w-full sm:max-w-[810px] flex flex-col text-white/70 headline">
          <h3 class="font-bold text-xl text-white/70">{title}</h3>
          <section class="sm:flex justify-between items-center">
            <h4 class="font-semibold mt-1">{company}</h4>
            <span class="text-sm">{date}</span>
          </section>
          <p class="text-justify tracking-wide mt-2 text-gray-400">{description}</p>
        </article>
      ))
    }
  </section>
</section>

<script>
  import ScrollReveal from 'scrollreveal'
  ScrollReveal().reveal('.headline', {delay: 100});
</script>
